@model DeepCycles.Models.ViewModels.AdminLogInRequest
@{
}

<div class="bg-secondary bg-opacity-25 py-2 fw-bold">
    <div class="container">
        <h1>Admin Log In</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Admin Email</label>
            <input type="text" class="form-control" id="AdminEmail" asp-for="AdminEmail" />
        </div>

        <div class="mb-3">
            <label class="form-label">Admin Password</label>
            <input type="text" class="form-control" id="AdminPassword" asp-for="AdminPassword" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success" asp-area="" asp-controller="Admin" asp-action="AllBookings">Log In</button>

            <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="HomePage">Back</a>
        </div>
    </form>
</div>