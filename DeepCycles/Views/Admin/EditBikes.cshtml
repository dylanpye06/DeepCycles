@model DeepCycles.Models.ViewModels.EditBikeRequest
@{
}

<div class="bg-black py-2 fw-bold">
    <div class="container">
        <h1 class="text-light">Edit Bike</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <input type="hidden" asp-for="BikeId" />

        <div class="mb-3">
            <label class="form-label">Bike Name</label>
            <input type="text" id="BikeName" class="form-control" asp-for="BikeName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Bike Description</label>
            <input type="text" id="BikeDescription" class="form-control" asp-for="BikeDescription" />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" id="Price" class="form-control" asp-for="Price" />
        </div>

        <div class="mb-3">
            <label for="DisplayImage" class="form-label">Upload Display Image</label>
            <input type="file" class="form-control" id="DisplayImage" asp-for="DisplayImage" accept="image/*" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="Admin" asp-action="DeleteBike">Delete</button>
            </div>
        </div>
    </form>
</div>

