@model DeepCycles.Models.Domain.Booking
@{
}

<div class="bg-black fw-bold">
    <div class="container">
        <h1 class="text-light">Please Take A Second To Review Your Booking @Model.FullName </h1>
            <div>
                <p class="text-light">If Anything Looks Incorrect Please Click The Edit Button To Make Any Changes Or To Delete The Request</p>
            </div>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <table class="table" style="background-color: black; color: white; border-collapse: collapse;">
            <thead>
                <tr style="border-bottom: 1px solid white;">
                    <th style="border-right: 1px solid white;">Full Name</th>
                    <th style="border-right: 1px solid white;">Email</th>
                    <th style="border-right: 1px solid white;">Phone Number</th>
                    <th style="border-right: 1px solid white;">Post Code</th>
                    <th style="border-right: 1px solid white;">Booking Title</th>
                    <th style="border-right: 1px solid white;">Booking Description</th>
                    <th style="border-right: 1px solid white;">Collection And Drop Off Charge</th>
                    <th style="border-right: 1px solid white;">Collection Time</th>
                    <th style="border-right: 1px solid white;">Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="border-right: 1px solid white;">@Model.FullName</td>
                    <td style="border-right: 1px solid white;">@Model.Email</td>
                    <td style="border-right: 1px solid white;">@Model.PhoneNumber</td>
                    <td style="border-right: 1px solid white;">@Model.PostCode</td>
                    <td style="border-right: 1px solid white;">@Model.BookingTitle</td>
                    <td style="border-right: 1px solid white;">@Model.BookingDescription</td>
                    <td style="border-right: 1px solid white;">@Model.CollectionAndDropOffCharge</td>
                    <td style="border-right: 1px solid white;">@Model.CollectionTime</td>
                    <td style="border-right: 1px solid white;">
                        <a asp-area="" asp-controller="Customer" asp-action="EditBooking"
                           asp-route-BookingId="@Model.BookingId"
                           asp-route-FullName="@Model.FullName"
                           asp-route-Email="@Model.Email"
                           asp-route-PhoneNumber="@Model.PhoneNumber"
                           asp-route-PostCode="@Model.PostCode"
                           asp-route-BookingTitle="@Model.BookingTitle"
                           asp-route-BookingDescription="@Model.BookingDescription"
                           asp-route-CollectionAndDropOffCharge="@Model.CollectionAndDropOffCharge"
                           asp-route-CollectionTime="@Model.CollectionTime"
                           style="color: white; text-decoration: underline;">Edit</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mb-3">
            <div class="d-flex">

                <form asp-area="" asp-controller="Customer" asp-action="SaveBooking" method="post">
                    <input asp-for="BookingId" type="hidden" />
                    <input asp-for="FullName" class="form-control" type="hidden" />
                    <input asp-for="Email" class="form-control" type="hidden" />
                    <input asp-for="PhoneNumber" class="form-control" type="hidden" />
                    <input asp-for="PostCode" class="form-control" type="hidden" />
                    <input asp-for="BookingTitle" class="form-control" type="hidden" />
                    <input asp-for="BookingDescription" class="form-control" type="hidden" />
                    <input asp-for="CollectionAndDropOffCharge" type="hidden" />
                    <input asp-for="CollectionTime" type="hidden" />
                    <button class="btn btn-success" type="submit">Submit</button>
                </form>

                <form asp-action="DeleteBooking" method="post" class="ms-2">
                    <input type="hidden" name="BookingId" value="@Model.BookingId" />
                    <button type="submit" class="btn btn-danger">
                        Delete Booking
                    </button>
                </form>

            </div>
        </div>
    }

    else
    {
        <p> No Bookings Found </p>
        <div class="mb-3">
            <div class="d-flex">
                <a class="btn btn-success ms-md-3 btn btn-success" asp-area="" asp-controller="Home" asp-action="HomePage">Back</a>
            </div>
        </div>
    }
</div>



