@model DeepCycles.Models.ViewModels.EditBookingRequest
@{
}

<div class="bg-black py-2 fw-bold">
    <div class="container">
        <h1 class="text-light">Edit Booking</h1>
    </div>
</div>

<div class="container py-5">

    <form method="post">

        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" id="FullName" class="form-control" asp-for="FullName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" id="Email" class="form-control" asp-for="Email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <input type="text" id="PhoneNumber" class="form-control" asp-for="PhoneNumber" />
        </div>

        <div class="mb-3">
            <label class="form-label">Post Code</label>
            <input type="text" id="PostCode" class="form-control" asp-for="PostCode" />
        </div>
        <div class="mb-3">
            <label class="form-label">Boooking Title</label>
            <input type="text" id="BookingTitle" class="form-control" asp-for="BookingTitle" />
        </div>

        <div class="mb-3">
            <label class="form-label">Booking Description</label>
            <input type="text" id="BookingDescription" class="form-control" asp-for="BookingDescription" />
        </div>

        <div class="mb-3">
            <label class="form-label">Collection And Drop Off Charge</label>
            <input type="text" id="CollectionAndDropOffCharge" class="form-control" asp-for="CollectionAndDropOffCharge" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label">Collection Time</label>
            <input type="text" id="CollectionTime" class="form-control" asp-for="CollectionTime" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success" asp-route-id="@Model.BookingId">Save Changes</button>

                <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="Customer" asp-action="DeleteBooking">Delete Booking</button>
            </div>
        </div>
    </form>
</div>